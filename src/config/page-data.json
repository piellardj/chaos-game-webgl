{
    "title": "Chaos game",
    "description": "WebGL implementation of the Chaos game.",
    "introduction": [
        "...",
        "..."
    ],
    "githubProjectName": "chaos-game-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.js"
    ],
    "indicators": [
        "Total points"
    ],
    "canvas": {
        "width": 512,
        "height": 512,
        "enableFullscreen": true
    },
    "controlsSections": [
        {
            "title": "Rendering",
            "controls": [
                {
                    "title": "Keep drawing",
                    "type": "checkbox",
                    "id": "autorun-checkbox-id",
                    "checked": true
                },
                {
                    "type": "button",
                    "id": "reset-button-id",
                    "label": "Clear",
                    "flat": true
                },
                {
                    "title": "Step size",
                    "type": "range",
                    "id": "speed-range-id",
                    "min": 1,
                    "max": 20,
                    "value": 15,
                    "step": 1
                },
                {
                    "title": "Quality",
                    "type": "range",
                    "id": "quality-range-id",
                    "min": 0,
                    "max": 1,
                    "value": 0.6,
                    "step": 0.1
                },
                {
                    "title": "Rainbow",
                    "type": "checkbox",
                    "id": "colors-checkbox-id",
                    "checked": false
                }
            ]
        },
        {
            "title": "Rules",
            "controls": [
                {
                    "title": "Preset",
                    "type": "picker",
                    "id": "presets-picker-id",
                    "placeholder": "Custom",
                    "options": [
                        {
                            "value": "0",
                            "label": "Sierpinski triangle"
                        },
                        {
                            "value": "1",
                            "label": "The Church"
                        },
                        {
                            "value": "2",
                            "label": "Pentagrams"
                        },
                        {
                            "value": "3",
                            "label": "Wires: triangle"
                        },
                        {
                            "value": "4",
                            "label": "Wires: cube"
                        },
                        {
                            "value": "5",
                            "label": "Square trees"
                        },
                        {
                            "value": "6",
                            "label": "Stars"
                        },
                        {
                            "value": "7",
                            "label": "Infinite cubes"
                        },
                        {
                            "value": "8",
                            "label": "Crustaceans"
                        },
                        {
                            "value": "9",
                            "label": "Chessboard"
                        },
                        {
                            "value": "10",
                            "label": "Starmap"
                        },
                        {
                            "value": "11",
                            "label": "Pythagoras tree"
                        },
                        {
                            "value": "12",
                            "label": "Monolith"
                        },
                        {
                            "value": "13",
                            "label": "Koch snowflake"
                        }
                    ]
                },
                {
                    "title": "Attractors",
                    "type": "range",
                    "id": "poles-range-id",
                    "min": 3,
                    "max": 16,
                    "value": 5,
                    "step": 1
                },
                {
                    "title": "Distance",
                    "type": "range",
                    "id": "distance-range-id",
                    "min": 0.1,
                    "max": 2,
                    "value": 0.5,
                    "step": 0.001
                },
                {
                    "title": "Forbid repeat",
                    "type": "checkbox",
                    "id": "forbid-repeat-checkbox-id"
                }
            ]
        },
        {
            "title": "Result",
            "controls": [
                {
                    "title": "Dimensions",
                    "type": "tabs",
                    "group": "result-dimensions",
                    "unique": true,
                    "options": [
                        {
                            "value": "1024",
                            "label": "1024",
                            "checked": true
                        },
                        {
                            "value": "2048",
                            "label": "2048"
                        },
                        {
                            "value": "4096",
                            "label": "4096"
                        }
                    ]
                },
                {
                    "type": "file-download",
                    "id": "result-download-id",
                    "label": "Download",
                    "flat": true
                }
            ]
        }
    ]
}